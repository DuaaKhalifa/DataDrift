<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.datadrift.com/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.datadrift.com/xml/ns/dbchangelog
        ../../xsd/dbchangelog-1.0.xsd">

    <!-- Example changeset: Add role column -->
    <changeSet id="002" author="john.doe">
        <comment>Add role column to users table</comment>

        <addColumn tableName="users">
            <column name="role" type="VARCHAR(50)" defaultValue="USER">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <rollback>
            <dropColumn tableName="users" columnName="role"/>
        </rollback>
    </changeSet>

</databaseChangeLog>